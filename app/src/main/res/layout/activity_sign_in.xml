<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lemon.piece.dodamdodam.SignInActivity">
    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/sign_in_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="ID"/>

            <EditText
                android:id="@+id/check_id"
                android:layout_width="120dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/sign_in_id"
            android:id="@+id/sign_in_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="PW"/>

            <EditText
                android:id="@+id/check_pw"
                android:layout_width="120dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <Button
            android:text="SIGN IN"
            android:id="@+id/check_button"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/sign_in_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>
