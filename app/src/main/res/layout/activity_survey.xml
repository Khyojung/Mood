<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:id="@+id/survey_background"
    tools:context="com.lemon.piece.dodamdodam.default_user.Survey">
    <ImageView
        android:id="@+id/name"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_width="194dp"
        android:layout_height="40dp"/>
    <android.support.constraint.ConstraintLayout
        android:layout_marginTop="20dp"
        android:layout_below="@+id/name"
        android:id="@+id/drink_relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <FrameLayout
            android:id="@+id/survey"
            android:layout_width="300dp"
            android:layout_height="500dp"
            android:layout_centerHorizontal="true">

        </FrameLayout>


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/survey"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <Button
                android:id="@+id/survey_before"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_gravity="left"
                android:background="@drawable/before_button"

                 />

            <Button
                android:id="@+id/survey_next"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:background="@drawable/next_button"
                app:layout_constraintEnd_toEndOf="parent" />
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>


</RelativeLayout>
