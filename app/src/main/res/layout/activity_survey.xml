<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context="com.lemon.piece.dodamdodam.default_user.Survey">
    <ImageView
        android:id="@+id/name"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_width="194dp"
        android:layout_height="40dp"/>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_below="@+id/name"
        android:id="@+id/drink_relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <FrameLayout
            android:id="@+id/survey"
            android:layout_width="300dp"
            android:layout_height="500dp"
            android:layout_centerHorizontal="true">

        </FrameLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/survey"
            android:layout_centerHorizontal="true">

            <Button
                android:id="@+id/survey_before"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/survey_next"
                android:text="before" />

            <Button
                android:layout_marginBottom="20dp"
                android:id="@+id/survey_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/survey_before"
                android:text="Next" />
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>
