<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="wrap_content">
        <ImageView
            android:background="@drawable/survey_1"
            android:paddingBottom="20dp"
            android:id="@+id/survey_1_question"
            android:layout_width="300dp"
            android:layout_height="90dp"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:text="빈칸에 1부터 10까지 숫자를 입력해달라냥!"
            android:gravity="center_horizontal"
            android:id="@+id/survey_1_hint"
            android:layout_below="@id/survey_1_question"
            android:fontFamily="@font/font"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_below="@+id/survey_1_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:background="@drawable/nav_happy"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="20dp"/>
                <EditText
                    android:hint="0"
                    android:inputType="number"
                    android:fontFamily="@font/font"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:id="@+id/survey_11"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/blank"
                    android:layout_width="70dp"
                    android:layout_height="40dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:background="@drawable/nav_dis"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="20dp"/>
                <EditText
                    android:hint="0"
                    android:inputType="number"
                    android:fontFamily="@font/font"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:id="@+id/survey_12"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/blank"
                    android:layout_width="70dp"
                    android:layout_height="40dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:background="@drawable/nav_sad"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="20dp"/>
                <EditText
                    android:hint="0"
                    android:inputType="number"
                    android:fontFamily="@font/font"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:id="@+id/survey_13"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/blank"
                    android:layout_width="70dp"
                    android:layout_height="40dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:background="@drawable/nav_angry"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="20dp"/>
                <EditText
                    android:hint="0"
                    android:inputType="number"
                    android:fontFamily="@font/font"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:id="@+id/survey_14"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/blank"
                    android:layout_width="70dp"
                    android:layout_height="40dp" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>