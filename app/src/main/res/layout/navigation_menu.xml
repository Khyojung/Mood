<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="navigation_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/nav_menu_happy"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/nav_happy"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/nav_menu_angry"
        android:layout_width="100dp"
        android:layout_height="50dp"

        android:layout_marginTop="30dp"
        android:background="@drawable/nav_angry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nav_menu_happy" />

    <ImageButton
        android:id="@+id/nav_menu_dis"
        android:layout_width="100dp"
        android:layout_height="50dp"

        android:layout_marginTop="30dp"
        android:background="@drawable/nav_dis"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nav_menu_angry" />

    <ImageButton
        android:id="@+id/nav_menu_sad"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/nav_sad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nav_menu_dis" />

</android.support.constraint.ConstraintLayout>