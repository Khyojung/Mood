<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lemon.piece.dodamdodam.SignUpActivity">
    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/input_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="ID"/>

            <EditText
                android:id="@+id/edit_id"
                android:layout_width="120dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/input_id"
            android:id="@+id/input_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="PW"/>

            <EditText
                android:id="@+id/edit_pw"
                android:layout_width="120dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/input_pw"
            android:id="@+id/input_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="NAME"/>

            <EditText
                android:id="@+id/edit_name"
                android:layout_width="120dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/input_name"
            android:id="@+id/input_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="AGE"/>

            <EditText
                android:id="@+id/edit_age"
                android:layout_width="120dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/input_age"
            android:id="@+id/input_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="GENDER"/>

            <RadioGroup
                android:id="@+id/edit_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/edit_wm"
                        android:text="여성"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:id="@+id/edit_m"
                        android:text="남성"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/input_gender"
            android:id="@+id/input_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="EMAIL"/>

            <EditText
                android:id="@+id/edit_email"
                android:layout_width="120dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <Button
            android:text="SIGN UP"
            android:id="@+id/edit_button"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/input_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>
